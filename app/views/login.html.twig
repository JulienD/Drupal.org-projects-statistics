{% extends 'layout.html.twig' %}
{% set active = 'signin' %}

{% block content %}
        {% if error %}
            <div class="alert alert-danger">
                {{ error }}
            </div>
        {% endif %}

    <div class="container">

       {{ form_start(form, {'attr': {'class': 'form-signin', novalidate: 'novalidate'}}) }}
            <h2 class="form-signin-heading">Please log in</h2>

            {{ form_errors(form) }}

            {{ form_errors(form.username) }}
            {{ form_widget(form.username, {'attr': {'class': 'form-control username', 'placeholder': 'Username'}}) }}

            {{ form_errors(form.password) }}
            {{ form_widget(form.password, {'attr': {'class': 'form-control password', 'placeholder': 'Password'}}) }}

            <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>

        {{ form_end(form) }}

    </div> <!-- /container -->

{% endblock %}



