{% extends 'layout.html.twig' %}
{% set active = 'project' %}

{% block content %}
    <div class="row">
        {% include 'sidebar.html.twig' %}
        <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
            <h1 class="page-header">{{ project.title }}</h1>

            {% if is_granted('ROLE_USER') %}
                <div id="flags">
                    {% for flag in flags %}
                        <a class="flag {% if flag.flagStatus %} flagged {% endif %}" href="#" data-project-id="{{ project.id }}" data-flag-type="{{ flag.flagType }}">{{ flag.flagTitle }}</a>
                    {% endfor %}
                </div>
            {% endif %}

            <div class="row">
                <div class="row">
                    <div class="col-md-4">
                        <h2>Downloads & Installs</h2>
                        <table class="table table-striped">
                            <tr><td>Downloads</td><td> {{ statistic.downloads }} </td></tr>
                            <tr><td>Installs</td><td> {{ statistic.installs }} </td></tr>
                        </table>
                    </div>

                    <div class="col-md-8">

                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4">
                        <h2>Bugs & Issues</h2>
                        <table class="table table-striped">
                            <tr><td>Opened issues</td><td> {{ statistic.openedIssues }} </td></tr>
                            <tr><td>Total issues</td><td> {{ statistic.totalIssues }} </td></tr>
                            <tr><td>Opened bugs</td><td> {{ statistic.openedBugs }} </td></tr>
                            <tr><td>Total bugs</td><td> {{ statistic.totalBugs }} </td></tr>
                        </table>
                    </div>

                    <div class="col-md-8">
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4">
                        <h2>Versions</h2>
                        <table class="table">
                            {% for release in releases %}
                                {% if release.versionExtra == 'dev' %}
                                    <tr class="danger"><td>{{ release.version }}</td></tr>
                                {% elseif release.versionExtra != '' %}
                                    <tr class="warning"><td>{{ release.version }}</td></tr>
                                {% else %}
                                    <tr><td>{{ release.version }}</td></tr>
                                {% endif %}
                            {% endfor %}
                        </table>
                    </div>
                    <div class="col-md-2"></div>
                    <div class="col-md-4">
                        <h2>Maintainers</h2>
                    </div>
                </div>


            </div>
        </div>
    </div>
{% endblock %}
