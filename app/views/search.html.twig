{% extends 'layout.html.twig' %}
{% set active = 'projects' %}

{% block content %}
    <div class="row">
        {% include 'sidebar.html.twig' %}
        <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
            <h1 class="page-header">Search for: "{{ q }}"</h1>
            <div class="row">
                <table id="project-list-table" class="table table-striped">
                    <thead>
                        <th>Title</th>
                        <th></th>
                    </thead>
                    <tbody>
                    {% for result in results %}
                        <tr id="'project-{{ result.name }}" class="active">
                            <td>{{ result.title }}</td>
                            <td><a href="{{ path('project', {'project': result.id}) }}" class="btn btn-info">Show more</a></td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
